@using UsersAndAwards.Dependences;
@using UsersAndAwards.BLL.Interfaces;

@{
    Layout = "~/_Layout.cshtml";
    IAwardLogic award = DependencyResolver.AwardLogic;
    string titleAward = Request["title"];

    if (IsPost)
    {
        award.Add(new UsersAndAwards.Entities.Award()
        {
            Title = titleAward
        });

        Response.Redirect("~");
    }
}

<form class="crudContainer" action="~/Pages/AddAward.cshtml" enctype="multipart/form-data" method="post">
    <div>
        <label class="crudHead">Title of award</label>
        <div>
            <input class="crudInput" type="text" name="title" id="title" value=@titleAward required>
        </div>
    </div>
    <div>
        <div>
            <button class="crudButton">Add</button>
        </div>
    </div>
</form>